<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/tutorial_fragment"
        android:name="com.sp.learntogether.ui.tutorial.TutorialFragment"
        android:label="@string/title_tutorials"
        tools:layout="@layout/fragment_tutorial" />

    <fragment
        android:id="@+id/planner_fragment"
        android:name="com.sp.learntogether.ui.planner.PlannerFragment"
        android:label="Study Buddy"
        tools:layout="@layout/fragment_planner" >
    </fragment>

    <fragment
        android:id="@+id/communities_fragment"
        android:name="com.sp.learntogether.ui.communities.CommunitiesFragment"
        android:label="Forums"
        tools:layout="@layout/fragment_communities" >
        <action
            android:id="@+id/action_communities_fragment_to_groupChats2"
            app:destination="@id/forumPosts" />
        <action
            android:id="@+id/action_communities_fragment_to_addGCFragment"
            app:destination="@id/addPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sp.learntogether.ui.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_navigation_home"
            app:destination="@id/tutorial_fragment" />
    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.sp.learntogether.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/forumPosts"
        android:name="com.sp.learntogether.ui.communities.forumPosts"
        android:label="Forums"
        tools:layout="@layout/fragment_forum_posts" >
        <argument
            android:name="communityDestination"
            app:argType="string" />
        <action
            android:id="@+id/action_forumPosts_to_postScreen"
            app:destination="@id/postScreen" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.sp.learntogether.aboutFragment"
        android:label="About the app"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.sp.learntogether.addPostFragment"
        android:label="Make a Post!"
        tools:layout="@layout/fragment_add_forum_post" />
    <fragment
        android:id="@+id/postScreen"
        android:name="com.sp.learntogether.ui.communities.postScreen"
        android:label="Forums"
        tools:layout="@layout/fragment_post_screen" />

</navigation>